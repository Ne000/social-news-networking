<h1><%= markdown_to_html @post.title %></h1>

<div class="row">
    <div class="col-md-8">
       <small>
           <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
           submitted <%= time_ago_in_words(@post.created_at) %> ago by
           <%= @post.user.name %>
       </small> 
       <p><%= markdown_to_html @post.body %></p>
    </div>
    
    
    <% if @post.image? %>
        <div class="form-group">
            <%= image_tag( @post.image.medium.url ) %>
        </div>
    <% end %>

    
    
    <div class="col-md-4">
        <% if policy(@post).edit? %>
            <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
        <% end %>
    </div>
    
    <div class="col-md-4">
        <% if policy(@post).destroy? %>
            <%= link_to "Delete Post", [@topic, @post, @summary], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
        <% end %>
    </div>
    
    <div class="col-md-8">
        <h4>Comments</h4>
        <%= render @comments %>
    </div>
    <div class="col-md-8">
        <h4>Add a comment:</h4>
        <%= render partial: '/comments/form', locals: { topic: @topic, post: @post } %>
    </div>
</div>
