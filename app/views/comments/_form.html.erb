
<%= form_for [@post, Comment.new], remote: true do |f| %>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter comment" %>
    </div> 
    
    <div class="form-group">
        <%= f.submit "Create comment", class: 'btn btn-success' %>
    </div>    
<% end %>

