
<%= form_for [topic, post, post.comments.build] do |f| %>
    <% if post.comments.build.errors.any? %>
        <div class="alert alert-danger">
            <h4>There is an error saving your comment. </h4>
            <ul>
                <% post.comments.errors.build.full_messages.each do |msg| %> 
                   <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
            
        
    <%= form_group_tag(post.comments.build.errors[:body]) do %>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter comment" %>
    <% end %>
    
    <div class="form-group">
        <%= f.submit "Create comment", class: 'btn btn-success' %>
    </div>    
<% end %>

