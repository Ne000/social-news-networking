


<div class="row">
    <div class="col-md-8">
        <% @comment.each do |comment| %>
            <div class="media">
                <div class="media-body">
                    <%= comment.body %><br>
                    <small>submitted <%= time_ago_in_words(comment.created_at) %> ago by 
                    <%= comment.user.name %><br> </small>
                </div>
            </div>
        <% end %>
    </div>
</div>
    

   