<div class="breadcrumbs-v1">
	<div class="container"><h1>Posts</h1>
	<h1><%= @topic.name %>
	<p class="lead"><%= @topic.description %></p>
    <% if policy(@topic).update? %>
        <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
    <% end %>
    <% if policy(@topic).destroy? %>
        <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %> '
    <% end %></div>
</div>

<!--=== Blog Posts ===-->
<div class="container content-md">
		<!-- Blog All Posts -->
		<div class="col-md-9">
			<!-- News v3 -->
				<div class="row margin-bottom-20">
					
					<div class="col-sm-12 news-v3">
					    <h1>Posts</h1>
						<div class="tag-box tag-box-v2">
                            <%= render @posts %>
                            <%= will_paginate @posts %>
						</div>
					</div>
				</div><!--/end row-->
		
		<div class="clearfix margin-bottom-20"><hr></div>

	<!-- Pager v3 -->
	<ul class="pager pager-v3 pager-sm no-margin-bottom">
		<li><%= will_paginate @posts %></li>
	</ul>
	<!-- End Pager v3 -->
</div>
		<!-- End Blog All Posts -->


<div class="row">
    <div class="col-md-12">
        <p class="lead"><%= @topic.description %></p>
        <% if policy(@topic).update? %>
            <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
        <% end %>
        <% if policy(@topic).destroy? %>
            <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %> '
        <% end %>
         <div class="col-md-12 bottom_border"><br></div>
    </div>
    <div class="col-md-8">
        <%= render @posts %>
        <%= will_paginate @posts %>
    </div>
    <div class="col-md-8">
        <% if policy(Post.new).create? %>
            <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
        <% end %> 
    </div>
</div>
    

